{
  "name": "compiler-monorepo",
  "packageManager": "pnpm@10.11.0",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "lint": "oxlint --fix",
    "lint:check": "oxlint --type-aware"
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "nano-staged": "^0.9.0",
    "oxlint": "^1.29.0",
    "oxlint-tsgolint": "^0.8.0",
    "prettier": "^3.6.2",
    "turbo": "^2.6.1"
  },
  "nano-staged": {
    "*": [
      "prettier --write --ignore-unknown",
      "oxlint"
    ]
  }
}
